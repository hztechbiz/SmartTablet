<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartapp.hztech.smarttebletapp.PopUps.BatteryPopUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_background_corner_radius"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/btrylow" />

        <com.smart.tablet.components.LocalizedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_low"
            android:textColor="#000"
            android:textSize="40dp" />

        <com.smart.tablet.components.LocalizedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingLeft="250dp"
            android:paddingRight="250dp"
            android:text="PLEASE RE-CONNECT THE SMART TABLET TO THE POWER SOURCE NOW"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/closebattry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_radius"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="OK"
            android:textColor="#fff"
            android:textSize="16dp" />

    </LinearLayout>
</RelativeLayout>
