<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background_corner_radius"
    android:padding="10dp"
    tools:context="com.smartapp.hztech.smarttebletapp.MarketingPartnerSection.PopUpActivity">

    <ImageView
        android:id="@+id/popUpGalleryImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/radius_bottom_left"
            android:text="X"
            android:textSize="30dp" />
    </LinearLayout>

</RelativeLayout>
